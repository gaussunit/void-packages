if [ -n "$CROSS_BUILD" ]; then
	hostmakedepends+=" kdoctools qt5-host-tools qt5-qmake"
fi

marble-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	conflicts="marble-devel"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/cmake
	}
}
