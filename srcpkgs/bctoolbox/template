# Template file for 'bctoolbox'
pkgname=bctoolbox
version=0.6.0
revision=1
short_desc="Belledonne Communications utility library"
maintainer="JohnZ <johnz@posteo.net>"
build_style="cmake"
configure_args="-DENABLE_POLARSSL=0 -DENABLE_TESTS_COMPONENT=0 -DENABLE_TESTS=0"
license="GPL-2"
homepage="http://www.linphone.org"
distfiles="https://www.linphone.org/releases/sources/bctoolbox/bctoolbox-${version}.tar.gz"
checksum=4657e1970df262f77e47dee63b1135a5e063b63b0c42cfe7f41642b22e3831a8

makedepends="mbedtls-devel"
hostmakedepends="pkg-config"

bctoolbox-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/*.a
		vmove usr/share/bctoolbox/cmake
		vmove usr/lib/pkgconfig
	}
}
