# Template file for 'dtkwidget'
pkgname=dtkwidget
version=2.0.6.1
revision=1
build_style=qmake
configure_args="DBUS_VERSION_0_4_2=YES LIB_INSTALL_DIR=/usr/lib"
hostmakedepends="qt5-qmake pkg-config"
makedepends="qt5-devel dtkcore-devel gsettings-qt-devel librsvg-devel
 dde-qt-dbus-factory-devel xcb-util-devel startup-notification-devel
 qt5-multimedia-devel qt5-x11extras-devel pulseaudio-devel qt5-svg-devel"
short_desc="Deepin Tool Kit Widget"
maintainer="John <johnz@posteo.net>"
license="GPL-3"
homepage="https://github.com/linuxdeepin/dtkwidget"
distfiles="https://github.com/linuxdeepin/dtkwidget/archive/${version}.tar.gz"
checksum=e34909147ae6ee24ff26ac608b778f38b41562893dc028144da71eae7cc968ec

dtkwidget-devel_package() {
	depends="${sourcepkg}>=${version}_${revision} dtkcore-devel"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/cmake
		vmove usr/lib/dtk2
		vmove "usr/lib/*.so"
	}
}
